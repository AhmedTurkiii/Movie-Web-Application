<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Movie App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %> 

    <h1>Welcome to MovieBox</h1>
    <a href="/" style="margin-left: 20px; margin-right: 20px;">
        <img src="/logo.png" alt="Logo" style="height: 140px;">
    </a>   
    
    <% if (isLoggedIn) { %> 
        <p>Welcome back, <%= username %>! Enjoy browsing!</p>
        <button onclick="window.location.href='/lists'">View Your Lists</button>

        <h2>Your Liked Lists:</h2>
        <div id="liked-lists-container">
            <% if (likedLists && likedLists.length > 0) { %>
                <% likedLists.forEach(list => { %>
                    <div class="list-card">
                        <h3><%= list.listName %> by <%= list.username %></h3>
                        <a href="/lists/<%= list.listId %>">View List</a>
                    </div>
                <% }); %>
            <% } else { %>
                <p>You haven't liked any lists yet.</p>
            <% } %>
        </div>
    <% } %>

    <form action="/search">
        <label>
            Search by title:
            <input type="text" name="title">
        </label>
        <label>
            <input type="radio" name="mediaType" value="movie" class="radio" checked>Movies
        </label>
        <label>
            <input type="radio" name="mediaType" value="tv" class="radio">TV Shows <br>
        </label>
        <button>Search</button><br>
    </form>

    <p>Select a category from the navigation menu above.</p>

    <%- include('partials/footer') %> 
    <script src="/app.js"></script>
</body>
</html>

