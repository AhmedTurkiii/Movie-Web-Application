    <p>&copy; 2024 Movie App</p>
    <p>Data provided by <a href="https://www.themoviedb.org/" target="_blank">TMDb API</a></p>
    <p>Developed by Ahmed Torki, Eric Rios, and Ezequiel Reyes</p>

    <script>
        const footer = document.querySelector('footer');
        footer.style.backgroundColor = "#333";
        footer.style.color = "white";
        footer.style.padding = "20px 0";
        footer.style.textAlign = "center";
        footer.style.fontSize = "14px";
        footer.style.width = "100%"; 
        footer.style.position = "relative";

        const footerLink = document.querySelector('footer a');
        footerLink.style.color = "#00aaff";  
        footerLink.style.textDecoration = "none";  

        footerLink.addEventListener('mouseenter', () => {
            footerLink.style.textDecoration = "underline";  
        });
        footerLink.addEventListener('mouseleave', () => {
            footerLink.style.textDecoration = "none";  
        });

        const footerParagraphs = document.querySelectorAll('footer p');
        footerParagraphs.forEach(p => {
            p.style.margin = "5px 0";
        });
    </script>
</footer>
