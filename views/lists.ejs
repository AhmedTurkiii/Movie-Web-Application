<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Lists</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>

    <h1>Your Lists</h1>
    <form action="/lists" method="POST">
        <input type="text" name="listName" placeholder="List Name" required>
        <input type="checkbox" name="isPublished" value="1"> Publish
        <button type="submit">Create List</button>
    </form>

    <div id="lists-container">
        <% if (lists && lists.length > 0) { %>
            <% lists.forEach(list => { %>
                <div class="list-card">
                    <h3><%= list.listName %></h3>
                    <a href="/lists/<%= list.listId %>">View List</a>
                    <form action="/lists/<%= list.listId %>/delete" method="POST" style="display:inline;">
                        <button type="submit">Delete List</button>
                    </form>
                </div>
            <% }); %>
        <% } else { %>
            <p>No lists available.</p>
        <% } %>
    </div>

    <%- include('partials/footer') %>
</body>
</html>

